{
  "name": "wealthsimple-trade",
  "version": "0.1.0",
  "description": "Unofficial JS bindings for the Wealthsimple Trade API",
  "homepage": "https://github.com/MarkGalloway/wealthsimple-trade#readme",
  "keywords": [
    "wealthsimple",
    "api"
  ],
  "license": "MIT",
  "main": "src/index.js",
  "author": "Mark Galloway <Mark.Galloway@ualberta.ca>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MarkGalloway/wealthsimple-trade.git"
  },
  "bugs": {
    "url": "https://github.com/MarkGalloway/wealthsimple-trade/issues"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "report-coverage": "cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "test": "jest --coverage",
    "test:watch": "npm run test -- --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.2",
    "coveralls": "^3.0.6",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.3",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "axios": "^0.19.0"
  }
}
