{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "module":"commonjs",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "declarationDir": "dist/types",
        "outDir": "dist/lib",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src"
    ]
}
